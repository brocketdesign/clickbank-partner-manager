# Nginx Configuration for ClickBank Partner Manager
# Place this in /etc/nginx/sites-available/clickbank-partner-manager
# Then create a symlink: ln -s /etc/nginx/sites-available/clickbank-partner-manager /etc/nginx/sites-enabled/

server {
    listen 80;
    server_name your-tracking-domain.com www.your-tracking-domain.com;
    
    # For SSL/HTTPS, uncomment and configure:
    # listen 443 ssl http2;
    # ssl_certificate /path/to/cert.pem;
    # ssl_certificate_key /path/to/key.pem;
    
    root /var/www/clickbank-partner-manager;
    index index.php;
    
    # Logging
    access_log /var/log/nginx/clickbank-access.log;
    error_log /var/log/nginx/clickbank-error.log;
    
    # Main location - route non-admin traffic to index.php
    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    # Make /apply act like /apply.php for friendly URLs
    location = /apply {
        try_files /apply.php =404;
    }
    
    # Admin panel - serve PHP files directly
    location /admin/ {
        try_files $uri $uri/ =404;
    }
    
    # PHP processing
    location ~ \.php$ {
        fastcgi_pass unix:/var/run/php/php7.4-fpm.sock;  # Adjust PHP version as needed
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
        
        # Increase timeout for large imports
        fastcgi_read_timeout 300;
    }
    
    # Deny access to sensitive files
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    location ~ ^/(database\.sql|config\.php|\.gitignore|install\.sh)$ {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    # Deny access to backup files
    location ~ \.(sql\.bak|backup)$ {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header X-Content-Type-Options "nosniff" always;
    
    # Cache static files (if you add any later)
    location ~* \.(jpg|jpeg|png|gif|ico|css|js)$ {
        expires 30d;
        add_header Cache-Control "public, immutable";
    }
}

